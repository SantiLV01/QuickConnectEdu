<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="669.0" prefWidth="1201.0" style="-fx-background-color: white;" stylesheets="@cover.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quickconnectedu.controllers.CoverController">

    <!-- Imagen de borde -->
    <ImageView fitHeight="673.0" fitWidth="1250.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../images/Borde.png" />
        </image>
    </ImageView>

    <!-- Botón circular -->
    <Button fx:id="startBtn" layoutX="872.0" layoutY="263.0" 
            onAction="#onStart" 
            prefHeight="136.0" prefWidth="142.0" 
            styleClass="circle-button" text="" />

    <!-- Imagen del título -->
    <ImageView fitHeight="346.0" fitWidth="594.0" layoutX="175.0" layoutY="208.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../images/titulo.png" />
        </image>
    </ImageView>

    <!-- Imagen del icono Play (no bloquea clics) -->
    <ImageView fitHeight="248.0" fitWidth="246.0" layoutX="799.0" layoutY="223.0" 
               pickOnBounds="true" preserveRatio="true" mouseTransparent="true">
        <image>
            <Image url="@../images/Play%20.png" />
        </image>
    </ImageView>

</AnchorPane>
